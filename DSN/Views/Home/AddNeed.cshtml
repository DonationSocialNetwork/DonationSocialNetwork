
@{
    //Layout = null;
}
<div class="col-md-6 col-md-offset-3">
    <h3>Add Need</h3>
    <form>
        <div class="form-group">
            <label>Beneficiary Name:</label>
            <input type="text" class="form-control">
        </div>
        <div class="form-group">
            <label >Title:</label>
            <input type="text" class="form-control">
        </div>
        <div class="form-group">
            <label >Description:</label>
            <textarea class="form-control" rows="3"></textarea>
        </div>
        <div class="form-group">
            <label>Amount:</label>
            <input type="number" class="form-control">
        </div>
        <div class="form-group">
            <label>Approver:</label>
            <input type="text" class="form-control">
        </div>
        <div>
            <p>Do you wish to get this need fulfilled by our merchants after donations meet requested amount ?</p>
            <label class="radio-inline"><input type="radio" name="optradio" id="yesButton" onchange='$("#demo").show();'/>Yes</label>
            <label class="radio-inline"><input type="radio" name="optradio" id="noButton" onchange='$("#demo").hide();'/>No</label>
        </div>
        <div class="well-lg">
            <div id="demo"  style="display:none; ">
                <div class="form-group">
                    <label>Commodity type:</label>
                    <input type="text" class="form-control col-md-3">
                </div>
                <div class="form-group">
                    <label>Pincode:</label>
                    <input type="text" class="form-control">
                </div>
                <a id="check">Check</a>
                <div id="merchant">
                    <label>Best merchant picked by VISA Merchant Locator API is:</label>
                    <p>Navneet Book Store</p>
                </div>
            </div>
        </div>

        <button class="btn">Submit</button>
    </form>    
</div>

